// name: "fht2p",
// version: "0.9",
// author: "Wspsxing <biluohc@qq.com>",
// desc: "HTTP Server for Static File written with Rust",
// repo: "https://github.com/biluohc/fht2p",
// encoding: "utf8",
{
    "setting": {
        "keepAlive": true,
        // if file not have extname, pragram will to detect conten-type by read it if magic_limic big than the size of file.
        "magicLimit": 10485760, // 10M
        "cacheSecs": 30,
        // 0.0.0.0 is default listenning address, 8080 is default port.
        // fht2p will try to use the next one when the current one can not use, pramgram will exit if all failed.
        "addrs": [
            "0.0.0.0:8081",
            "0.0.0.0:8000",
            "127.0.0.1:0"
        ],
        "auth": null,
        "cert": null
    },
    "routes": {
        // ./ is default "/" of, "/" must exist.
        "/": {
            "path": "./",
            "redirectHtml": false,
            "authorized": false,
            "upload": false,
            "mkdir": false
        },
        "/rust/": {
            "path": "/Users/biluohc/.rustup//toolchains/nightly-x86_64-apple-darwin/share/doc/rust/html/",
            "redirectHtml": true,
            "authorized": false,
            "upload": false,
            "mkdir": false
        }
    }
}